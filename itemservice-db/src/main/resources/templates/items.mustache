<!DOCTYPE HTML>
<head>
    <meta charset="utf-8">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container" style="max-width: 600px">
    <div class="py-5 text-center">
        <h2>상품 목록</h2>
    </div>

    <!--
        <div class="row">
            <div class="col">
                <button class="btn btn-primary float-end"
                        onclick="location.href='addForm.html'"
                        th:onclick="|location.href='@{/items/add}'|"
                        type="button">상품 등록
                </button>
            </div>
        </div>
    -->
    <form name="itemSearch" method="get" class="form-inline">
        <div class="row">
            <div class="col">
                <input type="text" name="itemName" class="form-control" placeholder="상품명"/>
            </div>
            <div class="col">
                <input type="text" name="maxPrice" class="form-control" placeholder="가격제한"/>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-secondary mb-2">검색</button>
            </div>
            <div class="col">
            </div>
            <div class="col">
                <div class="col">
                    <button class="btn btn-primary float-end"
                            onclick="location.href='/items/addForm'"
                            type="button">상품 등록
                    </button>
                </div>
            </div>
        </div>

    </form>

    <hr class="my-4">
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>상품명</th>
                <th>가격</th>
                <th>수량</th>
            </tr>
            </thead>
            <tbody>
            {{#items}}
            <tr>
                <td><a href="/items/{{id}}">{{id}}</a>
                </td>
                <td><a href="/items/{{id}}">{{itemName}}</a></td>
                <td>{{price}}</td>
                <td>{{quantity}}</td>
            </tr>
            {{/items}}
            </tbody>
        </table>
    </div>
</div> <!-- /container -->

</body>
</html>
